{
	"name": "imx-bot",
	"version": "0.1.0",
	"license": "MIT",
	"scripts": {
		"prepare": "node ./scripts/check-config.js",
		"dev": "NODE_ENV=development nodemon",
		"build": "tsc",
		"bundle": "esbuild src/index.ts --platform=node --bundle --minify --outfile=build/index.js",
		"prod": "NODE_ENV=production TS_NODE_BASEURL=./dist node -r tsconfig-paths/register ./dist/src/index.js",
		"prebuild": "mkdir -p build/data && mv build/data data && rm -rf build && mkdir build && mv data build/data",
		"rebuild-start": "npm run build && pm2 reload ecosystem.config.js --update-env"
	},
	"dependencies": {
		"@mx-space/api-client": "0.9.4",
		"@types/cron": "1.7.3",
		"@types/lodash": "4.14.181",
		"@types/yargs": "17.0.10",
		"axios": "0.26.1",
		"camelcase-keys": "7.0.2",
		"chalk": "^4",
		"consola": "2.15.3",
		"cron": "1.8.2",
		"github-webhook-handler": "1.0.0",
		"lodash": "4.17.21",
		"oicq": "2.2.1",
		"randomcolor": "0.6.2",
		"remove-markdown": "0.3.0",
		"socket.io-client": "4.4.1",
		"yargs": "17.4.1"
	},
	"devDependencies": {
		"@innei-util/eslint-config-ts": "0.5.1",
		"@innei-util/prettier": "0.5.0",
		"@types/node": "17.0.23",
		"@types/randomcolor": "0.5.6",
		"esno": "0.14.1",
		"nodemon": "2.0.15",
		"tsconfig-paths": "3.14.1",
		"typescript": "4.6.3"
	},
	"resolutions": {
		"axios": "0.26.1"
	}
}