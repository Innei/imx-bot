{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "ES2019",
    "resolveJsonModule": true,
    "incremental": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "strict": true,
    "types": [],
    "lib": [
      "ES2015"
    ],
    "declaration": false,
    "baseUrl": ".",
    "paths": {
      "~": [
        "./src"
      ],
      "~/*": [
        "./src/*"
      ],
      "config": [
        "./config.ts"
      ]
    }
  }
}